<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_thema"
    tools:context=".MainActivity">

    <!-- Profile Image -->
    <ImageView
        android:layout_width="456dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:paddingBottom="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iklan" />


    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:text="Selamat Datang!!"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="@android:color/white"
        android:layout_marginTop="167dp" />

    <!-- Good Morning Text -->
    <TextView
        android:id="@+id/good_morning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_centerHorizontal="true"
        android:text="Good Morning"
        android:textStyle="italic"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp" />

    <!-- Grid Layout for Icons -->
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_below="@id/good_morning_text"
        android:layout_marginBottom=
            "180dp"
        android:layout_marginTop="10dp"
        android:alignmentMode="alignMargins"
        android:background="@drawable/circle_gridlayout"
        android:columnCount="2"
        android:padding="30dp"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <!-- Warga Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cdMenu1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#87AFC7"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/background_thema">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/diversity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warga"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Warga Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cdMenu2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#87AFC7"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_thema"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/laporan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laporan"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Laporan Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cdMenu3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/background_thema"
                android:padding="16dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/management" />

                <TextView
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:text="struktur"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Laporan Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cdMenu4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#87AFC7"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/background_thema"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/pesan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesan"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- New Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cdMenu5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#87AFC7"
            app:cardCornerRadius="16dp">

        </androidx.cardview.widget.CardView>

        <!-- New Card 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cdMenu6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#87AFC7"
            app:cardCornerRadius="16dp">


        </androidx.cardview.widget.CardView>


    </GridLayout>

</RelativeLayout>
